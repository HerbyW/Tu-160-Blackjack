<!-- Engines running -->
 <engine>
   <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-160-Blackjack/Sounds/jet.wav</path>      
        <condition>
	  <and>
	 <greater-than>
          <property>sim/multiplay/generic/int[11]</property>
	  <value>0</value>
	 </greater-than>
	 <greater-than>
          <property>sim/multiplay/generic/float[9]</property>    
          <value>48</value>
         </greater-than>
	 </and>
        </condition>  
      <volume>
        <property>sim/multiplay/generic/float[9]</property>
        <factor>0.007</factor>
        <min>0.06</min>
        <max>0.70</max>        
      </volume>
      <pitch>
        <property>sim/multiplay/generic/float[9]</property>
        <factor>0.005</factor>
        <min>0.0</min>
        <max>0.5</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>0</delay-sec>
 </engine>
 
