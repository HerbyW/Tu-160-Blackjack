    <crank>
      <name>engstart1</name>
      <path>Aircraft/Tu-160-Blackjack/Sounds/turbine_start.wav</path>
      <mode>once</mode>
       <condition>       
	 <and>
         <equals>
          <property>sim/multiplay/generic/int[11]</property>    
          <value>1</value>
         </equals>
	 <equals>
          <property>sim/multiplay/generic/int[12]</property>    
