<!-- Red lamp
3D instrument for Tu-154 -->
<PropertyList>
 <path>red_lamp.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <object-name>_d_1</object-name>
  <emission>           
      <red>   0.235 </red>
      <green> 0.235 </green>
      <blue>  0.235 </blue>
    </emission>
</animation>
<!--Brightness-->
<animation>
  <type>material</type>
  <object-name>_d_2</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
</animation>

<!--Set-->
<animation>
  <type>select</type>
  <object-name>_d_2</object-name>
  <condition>
    <and>
    <greater-than>
    <property>/engines/engine[2]/afterburner</property>
    <value> 0.005</value>
    </greater-than>
    <equals>
     <property>/engines/engine[0]/out-of-fuel</property>    
     <value>0</value>
    </equals>
    </and>
  </condition>
</animation>

<animation>
<type>scale</type>
<object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <object-name>_d_2</object-name>
  <object-name>_d_1</object-name>
<property>sim/signals/fdm-initialized</property>
<x-min>1</x-min>
<y-min>1</y-min>
<z-min>1</z-min>
<x-factor>1.3</x-factor>
<y-factor>1.3</y-factor>
<z-factor>1.3</z-factor>
</animation>

</PropertyList>
