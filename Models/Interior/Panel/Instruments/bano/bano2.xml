<!-- Light switches block -AN-12
3D instrument for Tu-154 -->
<PropertyList>
 <path>bano.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
  <object-name>base_3</object-name>
  <object-name>base_4</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <offset>0.1</offset>
      <red>   0.11 </red>
      <green> 0.11 </green>
      <blue>  0.11 </blue>
    </emission>
</animation>

<!--Controls 1=CargoDoor 2=Parachutes 3=ALS Lights-->
<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>sim/multiplay/generic/float[7]</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	0.05</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	0.95</ind>	<dep>	0.0</dep></entry>    
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>sim/multiplay/generic/float[15]</property> 
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>handle_3</object-name>
  <property>controls/ALS/setting-pos</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Controls Cargo Door -->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/cargodoor/signal</property>
      </binding>
    </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/cargodoor/signal</property>
      </binding>
    </action>
</animation>


<!--Controls Parachutes Door -->
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
