<PropertyList>
  
  <path>lights-160b.ac</path>
  
<!-- No preview for fgrun-->
  <animation>  
    
    <object-name>LightVolume</object-name>
    
    <object-name>Cone-texture</object-name>
    <object-name>Cone-texture.001</object-name>
     
    <object-name>Spot</object-name>
    
    <nopreview/>
    </animation>
    
<!-- Special Shaders -->
    
    <animation>
      <type>noshadow</type>  
      
      <object-name>Cone-texture</object-name>
      <object-name>Cone-texture.001</object-name>
      <object-name>Spot</object-name>
      
      <object-name>LightVolume</object-name>
      
    </animation>
    
<!-- working for Rembrandt -->
    <effect>
      <inherits-from>Effects/model-transparent</inherits-from>  
      
      <object-name>Cone-texture</object-name>
      <object-name>Cone-texture.001</object-name>
      <object-name>Spot</object-name>
      
    </effect>
    
<!-- Landing and Search Light fake cone - disable in rembrand  -->
    <animation>
      <type>select</type>
      <object-name>Cone-texture</object-name>
      <condition>
	<and>
	  <property>sim/multiplay/generic/int[9]</property>	  
	  <greater-than>
	    <property>gear/gear[0]/position-norm</property>
	    <value>0.98</value>
	  </greater-than>	  
	</and>
      </condition>
    </animation>
    
    <animation>
      <type>select</type>
      <object-name>Cone-texture.001</object-name>
      <condition>
	
	<and>
	  <property>sim/multiplay/generic/int[10]</property>	  
	  <greater-than>
	    <property>gear/gear[0]/position-norm</property>
	    <value>0.98</value>
	  </greater-than>	  
	</and>
      
      </condition>
    </animation>
    
    
    
    <animation>
      <type>select</type>
      <object-name>Spot</object-name>
      <condition>
	<and>
	  <not>
	    <property>/sim/rendering/rembrandt/enabled</property>
	  </not>
	  <property>sim/multiplay/generic/int[9]</property>
	  <property>gear/gear[0]/position-norm</property>	     
	  <less-than>
	    <property>sim/multiplay/generic/float[5]</property>
	    <value>-5</value>
	  </less-than>
	  <greater-than>
	    <property>sim/multiplay/generic/float[5]</property>
	    <value>-0.4</value>
	  </greater-than>
	</and>
      </condition>
    </animation>
    
    
    
<!--  Rembrand  -->
    
    
    
    <animation>
      <type>select</type>
      <object-name>LightVolume</object-name>
      <condition>
	<and>
	  <property>/sim/rendering/rembrandt/enabled</property>
	  <property>sim/multiplay/generic/int[10]</property>
	  <property>gear/gear[0]/position-norm</property>
	</and>
      </condition>
    </animation>
    
    
    
<!-- Rembrand lights -->	
<!-- Taxi light -->
    <animation>
      <type>light</type>
      <light-type>spot</light-type>
      <name>Landinglight</name>
      <object-name>LightVolume</object-name>
      <position>
	<x>-15.6</x>
	<y> 0.0</y>
	<z>-1.11</z>
      </position>
      <direction>
	<x>-600.0</x>
	<y>   0.0</y>
	<z>   0.0</z>
      </direction>
      <diffuse>
	<r>1.0</r>
	<g>1.0</g>
	<b>1.0</b>
	<a>1.0</a>
      </diffuse>
      <specular>
	<r>1.0</r>
	<g>1.0</g>
	<b>1.0</b>
	<a>1.0</a>
      </specular>
      <attenuation>
	<c>1.0</c>
	<l>0.002</l>
	<q>0.00005</q>
      </attenuation>
      <exponent>40</exponent>
      <near-m>0.05</near-m>
      <far-m>450</far-m>
      <cutoff>40</cutoff>
    </animation>
    

    
</PropertyList>