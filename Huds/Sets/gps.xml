	      <halign>left</halign>
	      <input>
		<property>/engines/engine/fuel-flow-gph</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-310</y>
	      <format>RPM:.........................................%6.2f</format>
	      <halign>left</halign>
	      <input>
		<property>/engines/engine/rpm</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-320</y>
	      <format>Thrust:.............................%6.2f LBS</format>
	      <halign>left</halign>
	      <input>
		<property>/engines/engine/thrust-lbs</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-340</y>
	      <halign>left</halign>
	      <format>Departure-Airport</format>		
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <y>-340</y>
	      <x>20</x>
	      <input>
		<property>/autopilot/route-manager/departure/airport</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <y>-340</y>
	      <x>110</x>
	      <input>
		<property>/autopilot/route-manager/departure/name</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-350</y>
	      <halign>left</halign>
	      <format>Destination-Airport</format>		
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <y>-350</y>
	      <x>20</x>
	      <input>
		<property>/autopilot/route-manager/destination/airport</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <y>-350</y>
	      <x>110</x>
	      <input>
		<property>/autopilot/route-manager/destination/name</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-360</y>
	      <halign>left</halign>
	      <format>Total-Distance:..................%6.2f nm</format>
	      <input>
		<property>/autopilot/route-manager/total-distance</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-370</y>
	      <halign>left</halign>
	      <format>True-Heading:......................%5.2f deg</format>
	      <input>
		<property>/autopilot/route-manager/wp/true-bearing-deg</property>
	      </input>
	    </label>
	    
	    <label>
	      <width>2</width>
	      <height>2</height>
	      <x>-90</x>
	      <y>-380</y>
	      <halign>left</halign>
	      <format>Remaining-Distance:..........%6.2f nm</format>
	      <input>
		<property>/autopilot/route-manager/distance-remaining-nm</property>
	      </input>
	    </label>
	    
	    </PropertyList>
