    <config>
      <Kp>0.1</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>-25.0</u_min> <!-- minimum output clamp -->
      <u_max>25.0</u_max>   <!-- maximum output clamp -->
    </config>
   </pi-simple-controller>
  
  <pi-simple-controller>
    <name>AOA hold</name>
    <debug>false</debug>
